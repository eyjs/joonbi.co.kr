FROM node:20-alpine

WORKDIR /app

RUN apk add --no-cache libc6-compat

# 의존성 복사 및 설치
COPY package.json package-lock.json* ./
COPY apps/web/package.json ./apps/web/
COPY packages/shared/package.json ./packages/shared/

RUN npm install

# 소스 코드 복사
COPY . .

WORKDIR /app/apps/web

EXPOSE 3000

# 개발 서버 시작
CMD ["npm", "run", "dev"]